<h1>Your Dashboard</h1>

<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>

<a href="<%= @user.slug %>/games">View all games</a>
</br>
</br>
<a href="<%= @user.slug %>/games/new">Add a game</a>
</br>
</br>
<h2>Your Recent Games </h2>


<% @recent_games.each do |game| %>
  <p><a href="<%= @user.slug %>/games/<%= game.id %>"><%= game.date  %></a> 
  <%=  @user.wins.include?(game.win) ? "You won!" : nil %>
  <%=  @user.losses.include?(game.loss) ? "You lost!" : nil %>
  <%=  @user.draws.include?(game.draw) ? "Draw" : nil %>
  against: <% game.users.each do |user| %> 
    <%= user.name != @user.name ? user.name : nil %> 
  <% end %>
<% end %>