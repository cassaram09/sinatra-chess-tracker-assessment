<h1>User Dashboard</h1>

<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>

<a href="<%= @user.slug %>/games">View all games</a>
</br>
</br>
<a href="<%= @user.slug %>/games/new">Add a game</a>
</br>
</br>
<h2> You Recent Games </h2>
<% @user.games.reverse.each do |game| %>
  <p><a href="<%= @user.slug %>/games/<%= game.id %>"><%= game.date %> <%= game.outcome.name %> </a></p>
  Against:
    <% game.users.each do |user| %>
     <%=  user.name != @user.name ? user.name : nil %>
    <%end%>
<% end %>